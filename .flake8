[flake8]
max-line-length = 100
extend-ignore = E203
exclude = .git,__pycache__,build,dist,.venv,venv
per-file-ignores =
    __init__.py:F401
    tests/*.py:S101

# E203: Whitespace before ':' (conflicts with Black)
# F401: Module imported but unused (allowed in __init__.py files)
# S101: Use of assert (allowed in tests) 